<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".NumberLearningActivity">

    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="9:41"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="@id/top_bar" />

    <ImageView
        android:id="@+id/signal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_signal"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/wifi_icon" />

    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_wifi"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/battery_icon" />

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_battery"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="@id/top_bar" />

    <TextView
        android:id="@+id/number_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="2nd number learning"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/main_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ayo Belajar !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3700B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_learning_text" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_avatar"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/learning_area"
        android:layout_width="250dp"
        android:layout_height="322dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/feedback_area"
        app:layout_constraintEnd_toStartOf="@id/number_list_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintVertical_bias="0.005" />

    <View
        android:id="@+id/current_item_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#9C27B0"
        app:layout_constraintTop_toTopOf="@id/learning_area"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <LinearLayout
        android:id="@+id/answer_slots_layout"
        android:layout_width="236dp"
        android:layout_height="62dp"
        android:layout_marginTop="292dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/learning_area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintTop_toBottomOf="@id/current_item_indicator">

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#BDBDBD" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintEnd_toEndOf="@id/learning_area">

        <ImageView
            android:id="@+id/undo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_previus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/speak_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_mic"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/redo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_list_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintStart_toEndOf="@id/number_list_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/number_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button_background"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:text="1"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/number_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button_background"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:text="2"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/number_three_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button_background"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:text="3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/number_four_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button_background"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:text="4"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#9C27B0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/before_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/home_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/nextstep_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>