<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".ColorLearningActivity">

    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="9:41"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="@id/top_bar" />

    <ImageView
        android:id="@+id/signal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_signal"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/wifi_icon" />

    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_wifi"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/battery_icon" />

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_battery"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="@id/top_bar" />

    <TextView
        android:id="@+id/color_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="4th form learning"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/main_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ayo Belajar !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3700B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_learning_text" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_avatar"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/learning_area"
        android:layout_width="242dp"
        android:layout_height="349dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/feedback_area"
        app:layout_constraintEnd_toStartOf="@id/color_list_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintVertical_bias="0.008" />

    <View
        android:id="@+id/current_item_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#9C27B0"
        app:layout_constraintTop_toTopOf="@id/learning_area"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <LinearLayout
        android:id="@+id/answer_slots_layout"
        android:layout_width="248dp"
        android:layout_height="66dp"
        android:layout_marginTop="304dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/learning_area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintTop_toBottomOf="@id/current_item_indicator">

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#BDBDBD" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintEnd_toEndOf="@id/learning_area">

        <ImageView
            android:id="@+id/undo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_previus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/speak_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_mic"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/redo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/button_next" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/color_list_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="2"
        android:rowCount="6"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintStart_toEndOf="@id/color_list_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <View
            android:id="@+id/color_yellow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#FFFF00"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_orange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#FFA500"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_green"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#00FF00"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_red"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#FF0000"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_pink"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#FFC0CB"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_brown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#A0522D"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_purple_light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#EE82EE"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_blue_light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#ADD8E6"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_gray"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#808080"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_silver"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#C0C0C0"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#000000"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:id="@+id/color_purple_dark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="#800080"
            android:clickable="true"
            android:focusable="true"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#9C27B0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/before_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/home_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/nextstep_normal"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>