<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_number_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd number learning"
            android:textColor="#81C784"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_ayo_belajar"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_number_learning"
            android:layout_marginTop="14dp"
            android:text="Ayo Belajar !"
            android:textColor="#81C784"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Profil"
            android:src="@drawable/monamour" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_border">

                <View
                    android:id="@+id/isiAngka"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <com.example.pra_sekolah.DrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.4"
                android:background="@drawable/rounded_border" />

            <Button
                android:id="@+id/button_hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4FC3F7"
                android:text="Hapus" />

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 1"
                    android:onClick="KlikAngka"
                    android:src="@drawable/satu" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 2"
                    android:onClick="KlikAngka"
                    android:src="@drawable/dua" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 3"
                    android:onClick="KlikAngka"
                    android:src="@drawable/tiga" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 5"
                    android:onClick="KlikAngka"
                    android:src="@drawable/lima" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 6"
                    android:onClick="KlikAngka"
                    android:src="@drawable/enam" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 7"
                    android:onClick="KlikAngka"
                    android:src="@drawable/tujuh" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 8"
                    android:onClick="KlikAngka"
                    android:src="@drawable/delapan" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 9"
                    android:onClick="KlikAngka"
                    android:src="@drawable/sembilan" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Angka 0"
                    android:onClick="KlikAngka"
                    android:src="@drawable/nol" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4FC3F7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/before_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Menu"
            android:padding="12dp"
            android:src="@drawable/before_normal" />

        <ImageView
            android:id="@+id/home_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Beranda"
            android:padding="12dp"
            android:src="@drawable/home_normal" />

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Maju"
            android:padding="12dp"
            android:src="@drawable/nextstep_normal" />
    </LinearLayout>

</LinearLayout>