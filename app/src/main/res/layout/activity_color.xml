<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_color_learning"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="4th form learning"
            android:textColor="#81C784"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_ayo_belajar"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_color_learning"
            android:layout_marginTop="14dp"
            android:text="Ayo Belajar !"
            android:textColor="#81C784"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Profil"
            android:src="@drawable/monamour" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="486dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout


                android:layout_width="227dp"
                android:layout_height="502dp"
                android:layout_weight="0.3"
                android:background="@drawable/rounded_border">


                <View
                    android:id="@+id/isiColor"
                    android:layout_width="238dp"
                    android:layout_height="498dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/sample1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_border"
                android:padding="16dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFFF00"
                    android:contentDescription="Kuning"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFA500"
                    android:contentDescription="Orange"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#008000"
                    android:contentDescription="Hijau"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FF0000"
                    android:contentDescription="Merah"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FF69B4"
                    android:contentDescription="Pink"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#A0522D"
                    android:contentDescription="Coklat"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EE82EE"
                    android:contentDescription="Ungu Muda"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#0000FF"
                    android:contentDescription="Biru"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#808080"
                    android:contentDescription="Abu abu"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000"
                    android:contentDescription="Hitam"
                    android:onClick="KlikColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="#800080"
                    android:contentDescription="Ungu Tua"
                    android:onClick="KlikColor" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4FC3F7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/before_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Menu"
            android:padding="12dp"
            android:src="@drawable/before_normal" />

        <ImageView
            android:id="@+id/home_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Beranda"
            android:padding="12dp"
            android:src="@drawable/home_normal" />

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Maju"
            android:padding="12dp"
            android:src="@drawable/nextstep_normal" />
    </LinearLayout>

</LinearLayout>