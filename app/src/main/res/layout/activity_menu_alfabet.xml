<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context="AlphabetLearningActivity">

    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="9:41"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="@id/top_bar" />

    <ImageView
        android:id="@+id/signal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_signal"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/wifi_icon" />

    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_wifi"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@id/battery_icon" />

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_battery"
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="@id/top_bar" />

    <TextView
        android:id="@+id/alphabet_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="1st alphabet learning"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/main_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ayo Belajar !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3700B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alphabet_learning_text" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_avatar"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/learning_area"
        android:layout_width="234dp"
        android:layout_height="321dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/feedback_area"
        app:layout_constraintEnd_toStartOf="@id/alphabet_list_guideline"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/current_item_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#9C27B0"
        app:layout_constraintTop_toTopOf="@id/learning_area"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <LinearLayout
        android:id="@+id/answer_slots_layout"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:layout_marginTop="308dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/learning_area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintTop_toBottomOf="@id/current_item_indicator">

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#757575" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#BDBDBD" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@id/learning_area"
        app:layout_constraintEnd_toEndOf="@id/learning_area">

        <ImageView
            android:id="@+id/undo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_previus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/speak_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_mic"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/redo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/alphabet_list_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/main_instruction_text"
        app:layout_constraintStart_toEndOf="@id/alphabet_list_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/letter_a"
                android:layout_width="58dp"
                android:layout_height="61dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_a" />

            <ImageView
                android:id="@+id/letter_b"
                android:layout_width="57dp"
                android:layout_height="64dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_b" />

            <ImageView
                android:id="@+id/letter_c"
                android:layout_width="57dp"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_c" />

            <ImageView
                android:id="@+id/letter_d"
                android:layout_width="59dp"
                android:layout_height="82dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_d" />

            <ImageView
                android:id="@+id/letter_e"
                android:layout_width="59dp"
                android:layout_height="74dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_e" />

            <ImageView
                android:id="@+id/letter_f"
                android:layout_width="59dp"
                android:layout_height="82dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_f" />

            <ImageView
                android:id="@+id/letter_g"
                android:layout_width="61dp"
                android:layout_height="81dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/isi_" />
            <ImageView
                android:id="@+id/letter_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_h"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_i"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_j"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_k"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_l"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_m"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_n"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_o"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_p"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_q"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_r"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_s"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/letter_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/letter_t"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#9C27B0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/before_normal" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/home_normal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/nextstep_normal" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="#757575"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="445dp" />