<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"> <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_alphabet_learning"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="1st alphabet learning"
        android:textColor="#800080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_ayo_belajar"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_alphabet_learning"
        android:layout_marginTop="14dp"
        android:text="Ayo Belajar !"
        android:textColor="#800080"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:contentDescription="Profil"
        android:src="@drawable/username" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_border"> <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#800080"
                android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_border"/> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/button_previus"
                android:contentDescription="Kembali"
                android:padding="8dp" /> <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_mic"
            android:contentDescription="Rekam"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/> <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button_next"
            android:contentDescription="Lanjut"
            android:padding="8dp" /> </LinearLayout>

        </LinearLayout>

