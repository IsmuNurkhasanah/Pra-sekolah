                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:src="@drawable/isi_z"
                    android:contentDescription="Huruf Z"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#9C27B0"> <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/before_normal"
        android:padding="12dp"
        android:contentDescription="Menu" /> <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/home_normal"
        android:padding="12dp"
        android:contentDescription="Beranda" /> <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/nextstep_normal"
        android:padding="12dp"
        android:contentDescription="Maju" /> </LinearLayout>

