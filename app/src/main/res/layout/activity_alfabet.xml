                    android:layout_marginBottom="8dp"/>
                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:src="@drawable/isi_s"
                    android:contentDescription="Huruf S"
                    android:layout_marginBottom="8dp"/>
                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:src="@drawable/isi_t"
                    android:contentDescription="Huruf T"
                    android:layout_marginBottom="8dp"/>
                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:src="@drawable/isi_u"
                    android:contentDescription="Huruf U"
                    android:layout_marginBottom="8dp"/>
