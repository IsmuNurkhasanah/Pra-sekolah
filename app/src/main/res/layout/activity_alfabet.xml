<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_alphabet_learning"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="1st alphabet learning"
            android:textColor="#81C784"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_ayo_belajar"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_alphabet_learning"
            android:layout_marginTop="14dp"
            android:text="Ayo Belajar !"
            android:textColor="#81C784"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="66dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:contentDescription="Profil"
            android:src="@drawable/monamour" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_border">

                <View
                    android:id="@+id/isiHuruf"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <com.example.pra_sekolah.DrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.4"
                android:background="@drawable/rounded_border" />

            <Button
                android:id="@+id/button_hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4FC3F7"
                android:text="Hapus" />
        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Huruf A"
                    android:onClick="Klikalfa"
                    android:src="@drawable/isi_a" />

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Huruf B"
                    android:onClick="Klikalfa"
                    android:src="@drawable/isi_b" />

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="73dp"
